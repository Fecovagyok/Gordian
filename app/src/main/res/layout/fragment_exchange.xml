<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/create_key_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_key_create"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_key_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/create_a_secret_key"
        app:layout_constraintBottom_toTopOf="@id/btn_key_read"
        android:layout_margin="12dp"
        />

    <Button
        android:id="@+id/btn_key_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_key_create"
        android:text="@string/read_a_secret_key"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>