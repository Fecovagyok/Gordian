<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/contact_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contact_add_ok"
        android:inputType="text"
        android:hint="@string/contact_name"
        />

    <Button
        android:id="@+id/contact_add_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_field"
        app:layout_constraintStart_toStartOf="@id/contact_field"
        app:layout_constraintEnd_toEndOf="@id/contact_field"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/save"
        />

</androidx.constraintlayout.widget.ConstraintLayout>